pipeline{
    agent any
    tools{maven 'M3'}
    stages{
        stage('Checkout'){
            steps{
                git branch: 'main', url: "https://github.com/vishalr22/course3-jenkins-gs-spring-petclinic.git"
            }
        }
        stage('Compile'){
            steps{
                sh 'mvn compile'
            }
        }
        stage('Test'){
            steps{
                sh 'mvn test'
            }
        }
        stage('Package'){
            steps{
                sh 'mvn package'
            }
        }
        stage('Deploy'){
            steps{
                withEnv(['JENKINS_NODE_COOKIE=dontkillme']) {
                    sh 'java -jar -DServer.port=8045 /var/jenkins_home/workspace/scp_declarative/target/*.jar'
                }
            }
        }
    }
}
